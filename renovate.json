{
  "extends": ["config:base"],
  "assignees": ["jimmyandrade"],
  "enabled": true,
  "ignoreDeps": ["recoil"],
  "labels": ["dependencies", "renovate"],
  "packageRules": [
    {
      "updateTypes": ["major"],
      "automerge": false
    },
    {
      "updateTypes": ["digest", "minor", "patch", "pin"],
      "automerge": true
    }
  ],
  "semanticCommits": true,
  "schedule": ["before 3am on the first day of the month"],
  "unicodeEmoji": true,
  "updateLockFiles": true
}
